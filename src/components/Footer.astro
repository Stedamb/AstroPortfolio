---
import { Phone, Mail, Instagram, Facebook } from 'lucide-astro';
import { routes } from '@/routes/routes';
---

<div class="bg-muted">
  <div class="container-xl grid grid-cols-2 p-4 lg:grid-cols-3 lg:gap-8">
    <div class="col-span-2 p-8 mix-blend-exclusion lg:col-span-1">
      <img
        src="/logo.svg"
        alt="Logo"
        width="640"
        height="640"
        class="mx-auto h-auto w-1/2 lg:w-3/4"
      />
    </div>
    <div class="flex flex-col justify-center py-8 pl-8">
      <p class="text-2xl font-semibold">Astro Starter Pack</p>
      <div class="text-md mt-8">
        <a href="tel:+1 (234) 567-890" class="flex items-start gap-2 underline">
          <Phone size={18} />
          +1 (234) 567-890
        </a>
        <a href="mailto:info@astroframework.com" class="mt-2 flex items-start gap-2 underline">
          <Mail size={18} />
          info@astroframework.com
        </a>
        <div class="mt-8">
          <p class="text-md">Follow us on social media:</p>
          <div class="mt-4 flex gap-4">
            <a
              href="https://www.facebook.com/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Facebook class="h-8 w-8" />
            </a>
            <a
              href="https://www.instagram.com/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Instagram class="h-8 w-8" />
            </a>
            <a
              href="https://www.tiktok.com/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg
                class="ml-1 h-8 w-7 fill-white"
                aria-label="TikTok"
                role="img"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                ><title>TikTok</title><path
                  d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"
                ></path></svg
              >
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-col items-end p-8 lg:items-start lg:justify-center">
      <div class="flex grow flex-col justify-between">
        {
          routes.map((item) => (
            <a href={item.path} class="font-title text-4xl hover:text-muted-foreground">
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
