---
import { Github, ExternalLink } from 'lucide-react';
import { buttonVariants } from '@/components/ui/button';
import { cn } from '@/lib/utils';

const projects = [
  {
    title: 'AnimaNoire Tattoo Atelier',
    description: 'Website for a tattoo shop. Built with Astro and Sanity CMS.',
    image: '/animanoire.png',
    gradient: 'bg-gradient-to-br from-purple-500/10 to-pink-500/10',
    border: 'hover:border-pink-600',
    github: '#',
    demo: '#',
  },
  {
    title: 'Project Name 2',
    description: 'Brief description of the project and the technologies used.',
    image: '/project2.jpg',
    gradient: 'bg-gradient-to-br from-emerald-500/10 to-teal-500/10',
    border: 'hover:border-teal-600',
    github: '#',
    demo: '#',
  },
  {
    title: 'Project Name 3',
    description: 'Brief description of the project and the technologies used.',
    image: '/project3.jpg',
    gradient: 'bg-gradient-to-br from-orange-500/10 to-yellow-500/10',
    border: 'hover:border-yellow-600',
    github: '#',
    demo: '#',
  },
] as const;
---

<section id="projects" class="relative overflow-hidden py-20">
  <!-- Background gradients -->
  <div class="absolute inset-0 bg-background">
    <div
      class="absolute inset-0 bg-[radial-gradient(at_47%_33%,hsl(0,0%,100%)_0,transparent_59%)] opacity-10"
    >
    </div>
  </div>

  <div class="container relative mx-auto px-4">
    <h2 class="mb-12 text-center text-3xl font-bold md:text-4xl">Featured Projects</h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <div
            class={`group relative overflow-hidden rounded-lg border border-white/[0.125] bg-white/5 p-2 transition-colors duration-200 hover:bg-white/10 ${project.gradient} ${project.border}`}
          >
            <div class="relative h-60 overflow-hidden rounded-lg">
              <img
                src={project.image}
                alt={project.title}
                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
            </div>
            <div class="relative space-y-4 p-6">
              <h3 class="text-xl font-bold">{project.title}</h3>
              <p class="text-muted-foreground">{project.description}</p>
              <div class="flex gap-4 w-full">
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={cn(
                    buttonVariants({ variant: "glass" }),
                    "flex items-center justify-center gap-2 flex-1",
                    project.border
                  )}
                >
                  <Github className="size-4" />
                  <span class="font-medium">GitHub</span>
                </a>
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={cn(
                    buttonVariants({ variant: "glass" }),
                    "flex items-center justify-center gap-2 flex-1",
                    project.border
                  )}
                >
                  <ExternalLink className="size-4" />
                  <span class="font-medium">Live Demo</span>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
