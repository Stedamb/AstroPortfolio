---
import { Github, ExternalLink } from 'lucide-react';
import { buttonVariants } from '@/components/ui/button';
import { cn } from '@/lib/utils';
import { Image } from 'astro:assets';

const projects = [
  {
    title: 'AnimaNoire Tattoo Atelier',
    description: 'Website for a tattoo shop. Built with Astro and Sanity CMS.',
    image: '/animanoire.webp',
    gradient: 'bg-linear-to-br from-purple-500/10 to-pink-500/10',
    border: 'hover:border-pink-600',
    github: 'https://github.com/Stedamb/AnimaNoire/tree/astro-sanity',
    demo: 'http://animanoire.it',
  },
  {
    title: 'Next Blog',
    description: 'My personal blog built with Next.js and Sanity CMS.',
    image: '/blog.webp',
    gradient: 'bg-linear-to-br from-emerald-500/10 to-teal-500/10',
    border: 'hover:border-teal-600',
    github: 'https://github.com/Stedamb/next-blog',
    demo: 'http://stedamb.vercel.app',
  },
  {
    title: 'Video Portfolio',
    description: 'A video portfolio showcasing my work and skills. Built with Astro.',
    image: '/video-journal.webp',
    gradient: 'bg-linear-to-br from-orange-500/10 to-yellow-500/10',
    border: 'hover:border-yellow-600',
    github: 'https://github.com/Stedamb/Videomaker-portfolio/tree/dev',
    demo: 'http://video-journal.vercel.app',
  },
] as const;
---

<section id="projects" class="relative overflow-hidden py-20">
  <!-- Background gradients -->
  <div class="bg-background absolute inset-0">
    <div
      class="absolute inset-0 bg-[radial-gradient(at_47%_33%,hsl(0,0%,100%)_0,transparent_59%)] opacity-10"
    >
    </div>
  </div>

  <div class="relative mx-auto max-w-6xl px-4">
    <h2 class="mb-12 text-center font-serif text-3xl font-normal italic md:text-4xl">
      Featured Projects
    </h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <div
            class={`group relative overflow-hidden rounded-lg border border-white/12.5 bg-white/5 p-2 transition-colors duration-200 hover:bg-white/10 ${project.gradient} ${project.border}`}
          >
            <div class="relative h-60 overflow-hidden rounded-lg">
              <Image
                src={project.image}
                alt={project.title}
                width={380}
                height={300}
                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
            </div>
            <div class="relative space-y-4 p-6">
              <h3 class="text-xl font-bold">{project.title}</h3>
              <p class="text-muted-foreground">{project.description}</p>
              <div class="mt-auto flex w-full flex-wrap gap-4">
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={cn(
                    buttonVariants({ variant: 'glass' }),
                    'flex flex-1 items-center justify-center gap-2',
                    project.border
                  )}
                >
                  <Github className="size-4" />
                  <span class="font-medium lg:text-sm">GitHub</span>
                </a>
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={cn(
                    buttonVariants({ variant: 'glass' }),
                    'flex flex-1 items-center justify-center gap-2',
                    project.border
                  )}
                >
                  <ExternalLink className="size-4" />
                  <span class="font-medium lg:text-sm">Live Demo</span>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
